{
  "extends": "@it-diots/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@shared/ui": ["../../packages/shared/src/components/ui"],
      "@shared/ui/*": ["../../packages/shared/src/components/ui/*"],
      "@shared/hooks/*": ["../../packages/shared/src/hooks/*"],
      "@shared/globals.css": ["../../packages/shared/src/globals.css"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "postcss.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
